@inherits MetasListComponentBase

<div class="card">
    <div class="card-header">
        <a href="#" class="btn btn-primary">Nueva Tarea</a>
    </div>
    <ul class="list-group list-group-flush pt-2">
        @if (metas == null)
        {
            <li class="list-group-item text-center">Cargando...</li>
        }
        else
        {
            if (!metas.Any())
            {
                <li class="list-group-item text-center">No se encontraron registros</li>
            }
            foreach (var meta in metas)
            {
                <li class="list-group-item">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h5 class="card-title">Nombre meta</h5>
                        </div>
                        <div>
                            <button type="button" class="btn btn-primary">Primary</button>
                            <button type="button" class="btn btn-secondary">Secondary</button>
                        </div>
                    </div>
                    <h6 class="card-subtitle mb-2 text-muted">Fecha creada</h6>
                    <br>
                    <div class="d-flex justify-content-between">
                        <div>Tareas completadas: 1/2</div>
                        <div>75%</div>
                    </div>
                    <div class="progress" role="progressbar" aria-label="Basic example" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">
                        <div class="progress-bar" style="width: 75%"></div>
                    </div>
                </li>
            }
        }
    </ul>
</div>