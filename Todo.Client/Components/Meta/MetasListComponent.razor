@inherits MetasListComponentBase

<MudCard Outlined="true">
    <MudCardHeader>
        <CardHeaderContent>
            <MudButton Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Add" Color="Color.Info">Nueva Tarea</MudButton>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        <MudPaper>
            <MudList Clickable="true">
                @if (metas == null)
                {
                    <MudText Typo="Typo.h6">Cargando...</MudText>
                }
                else
                {
                    if (!metas.Any())
                    {
                        <MudText Typo="Typo.h6">No se encontraron registros</MudText>
                    }
                    foreach (var meta in metas)
                    {
                        <MudListItem>
                            <MudPaper Class="mud-transparent" Elevation="0">
                                <MudPaper Class="d-flex justify-space-between flex-grow-1 mud-transparent" Elevation="0">
                                    <div>
                                        <MudText Typo="Typo.h5">@meta.Nombre</MudText>
                                    </div>
                                    <div>
                                        <MudIconButton Icon="@Icons.Material.Filled.Edit" Variant="Variant.Filled" Color="Color.Primary" Size="Size.Medium"/>
                                        <MudIconButton Icon="@Icons.Material.Filled.Delete" Variant="Variant.Filled" Color="Color.Error" Size="Size.Medium"/>
                                    </div>
                                </MudPaper>
                                <MudText Typo="Typo.subtitle1">Fecha creada: @meta.FechaCreacion.Date.ToString("dd/MM/yyyy")</MudText>
                                <br>
                                <MudPaper Class="d-flex justify-space-between flex-grow-1 mud-transparent" Elevation="0">
                                    <div>
                                        <MudText Typo="Typo.body1">Tareas completadas: @meta.TareasCompletadas/@meta.TotalTareas</MudText>
                                    </div>
                                    <div>
                                        <MudText Typo="Typo.body1">@meta.Porcentaje</MudText>
                                    </div>
                                </MudPaper>
                                <MudProgressLinear Color="Color.Primary" Striped="true" Size="Size.Large" Value="@Decimal.ToInt32(meta.PorcentajeCumplimiento)" Class="my-7" />
                            </MudPaper>
                        </MudListItem>
                    }
                }
            </MudList>
        </MudPaper>
    </MudCardContent>
</MudCard>